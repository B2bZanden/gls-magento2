<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="business_parcel_services" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Additional BusinessParcel Services</label>
        <attribute type="expanded">1</attribute>
        <depends>
            <field id="business_parcel_active">1</field>
        </depends>
        <field id="flex_delivery_active" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>FlexDeliveryService</label>
            <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
        </field>
        <field id="shop_delivery_active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>ShopDeliveryService</label>
            <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
        </field>
        <field id="shop_delivery_shop_amount" translate="label" type="text" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>No. of Shops to Display</label>
            <depends>
                <field id="shop_delivery_active">1</field>
            </depends>
        </field>
        <field id="shop_return_active" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>ShopReturnService</label>
            <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
        </field>
    </group>
</include>
